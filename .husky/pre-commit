#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Check if there are staged files that need linting
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E "\.(ts|tsx|js|jsx)$" || true)

if [ -n "$STAGED_FILES" ]; then
  echo "ğŸ“ Running linter on staged files..."
  npm run lint
  
  if [ $? -ne 0 ]; then
    echo "âŒ Linting failed. Please fix the issues and try again."
    exit 1
  fi
fi

# Check if source files were changed
SRC_CHANGED=$(git diff --cached --name-only --diff-filter=ACM | grep -E "^src/" || true)

if [ -n "$SRC_CHANGED" ]; then
  echo "ğŸ”¨ Source files changed, rebuilding project..."
  npm run build
  
  if [ $? -ne 0 ]; then
    echo "âŒ Build failed. Please fix the issues and try again."
    exit 1
  fi
  
  # Add built files to staging area
  echo "ğŸ“¦ Adding built files to commit..."
  git add dist/
  
  echo "âœ… Build completed and files added to commit."
else
  echo "â„¹ï¸ No source changes detected, skipping build."
fi

echo "âœ… Pre-commit checks completed successfully!"
